<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".ui.MainActivity">

 <com.airbnb.lottie.LottieAnimationView
     android:id="@+id/progressBar"
     android:layout_width="wrap_content"
     android:layout_height="300dp"
     android:layout_centerInParent="true"
     app:lottie_autoPlay="true"
     app:lottie_loop="true"
     app:lottie_rawRes="@raw/loading"
     android:visibility="visible"/>

 <RelativeLayout
     android:id="@+id/mainContent"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:padding="14dp"
     android:background="@drawable/bg_final"
     android:visibility="gone">

 <TextView
     android:id="@+id/tvUsername"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="18sp"
     android:textColor="@color/white"
     android:layout_alignParentTop="true"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="30dp"/>

 <ImageView
     android:id="@+id/ivSettings"
     android:layout_width="26dp"
     android:layout_height="26dp"
     android:src="@drawable/baseline_settings_24"
     android:layout_alignParentTop="true"
     android:layout_alignParentEnd="true"
     android:layout_marginTop="30dp"
     android:layout_marginEnd="20dp"
     app:tint="@color/white" />

 <ImageView
     android:id="@+id/ivAvatar"
     android:layout_width="100dp"
     android:layout_height="100dp"
     android:layout_below="@id/tvUsername"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="70dp"
     android:scaleType="centerCrop"/>

 <TextView
     android:id="@+id/tvName"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Bruno Pham"
     android:textSize="19sp"
     android:textStyle="bold"
     android:textColor="@color/black"
     android:layout_below="@id/ivAvatar"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="12dp"/>

 <!-- Location -->
 <TextView
     android:id="@+id/tvLocation"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Da Nang, Vietnam"
     android:textSize="15sp"
     android:textColor="@color/black"
     android:layout_below="@id/tvName"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="8dp"/>

 <LinearLayout
     android:id="@+id/followersFollowingContainer"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/tvLocation"
     android:layout_centerHorizontal="true"
     android:gravity="center"
     android:layout_marginTop="20dp"
     android:orientation="horizontal"
     android:background="@drawable/bg_stat_box"
     android:padding="5dp">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginEnd="40dp">
   <TextView
       android:id="@+id/tvFollowers"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:hint="@string/_220"
       android:textSize="18sp"
       android:layout_marginEnd="8dp"
       android:textStyle="bold"
       android:textColor="@color/black"/>

   <TextView
       android:id="@+id/tvFollowersLabel"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/followers"
       android:textSize="14sp"
       android:textColor="#666666"/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="40dp"
      android:orientation="horizontal">

   <TextView
       android:id="@+id/tvFollowing"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginEnd="8dp"
       android:hint="@string/_140"
       android:textSize="18sp"
       android:textStyle="bold"
       android:textColor="@color/black"/>

   <TextView
       android:id="@+id/tvFollowingLabel"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/following"
       android:textSize="14sp"
       android:textColor="#666666"/>
  </LinearLayout>
 </LinearLayout>

 <LinearLayout
     android:id="@+id/socialIconsContainer"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/followersFollowingContainer"
     android:layout_marginTop="20dp"
     android:gravity="center"
     android:orientation="horizontal">

  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/tvWebsite"
      android:layout_width="35dp"
      android:layout_height="40dp"
      android:layout_marginEnd="10dp"
      android:focusable="true"
      app:lottie_autoPlay="true"
      app:lottie_loop="true"
      android:clickable="true"
      app:lottie_rawRes="@raw/browse" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/blue"
      android:text="@string/dot"
      android:textSize="20sp"
      android:textStyle="bold"/>

  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/anm_instagram"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:clickable="true"
      android:focusable="true"
      app:lottie_autoPlay="true"
      app:lottie_loop="true"
      app:lottie_rawRes="@raw/instagram" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/blue"
      android:text="@string/dot"
      android:textSize="20sp"
      android:textStyle="bold"/>
  
  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/anm_facebook"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      app:lottie_autoPlay="true"
      app:lottie_loop="true"
      app:lottie_rawRes="@raw/facebook" />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/blue"
      android:text="@string/dot"
      android:textSize="20sp"
      android:textStyle="bold"/>
  
  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/anm_twitter"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      app:lottie_autoPlay="true"
      app:lottie_loop="true"
      app:lottie_rawRes="@raw/twitter" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/blue"
      android:text="@string/dot"
      android:textSize="20sp"
      android:textStyle="bold"/>
  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/anm_github"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginStart="10dp"
      app:lottie_autoPlay="true"
      app:lottie_loop="true"
      app:lottie_rawRes="@raw/github" />

 </LinearLayout>

 <LinearLayout
     android:id="@+id/shotsAndCollectionBtn"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:layout_below="@id/socialIconsContainer"
     android:layout_marginTop="10dp"
     android:gravity="center">

  <com.google.android.material.button.MaterialButton
      android:id="@+id/tvShots"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/_0_shots"
      app:cornerRadius="8dp"
      android:textColor="@color/blue"
      app:backgroundTint="@color/light_blue"
      app:rippleColor="@color/black" />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/tvCollections"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:hint="@string/_10_collections"
      android:textColor="#666666"
      app:cornerRadius="8dp"
      app:backgroundTint="@color/white2"
      app:rippleColor="@color/black"
      />
 </LinearLayout>

 <ImageView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/shotsAndCollectionBtn"
     android:layout_marginTop="8dp"
     android:src="@drawable/shots"/>
 </RelativeLayout>

</RelativeLayout>
